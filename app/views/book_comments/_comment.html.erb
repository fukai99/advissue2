<% book.book_comments.each do |comment| %>
      <%= image_tag comment.user.get_profile_image %>
      <%= comment.user.name %>
      <%= comment.comment %>
      <%= link_to 'Destroy', book_book_comment_path(book,comment), method: :delete, remote:true, data: {"turbolinks" => false}%>
      <% end %>
      
      
      <%= form_with model: [book,book_comment] ,local: false do |f| %>
      <%= f.label :comment %>
      <%= f.text_area :comment %>
      <%= f.submit %>
      <% end %>_